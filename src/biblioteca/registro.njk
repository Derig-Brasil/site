  // Validar especialidade e mapear 'Outro (especificar)'
  const select = form.querySelector('#especialidade');
  if (!select || !select.value){
    setFieldError(form, 'especialidade', 'Informe sua especialidade.');
    hasErrors = true;
  }
  if (select && select.value === 'Outro'){
    const other = (form.querySelector('#especialidade_outro')?.value || '').trim();
    if (!other){
      setFieldError(form, 'especialidade', 'Informe a especialidade.');
      hasErrors = true;
    } else {
      let hidden = form.querySelector('#especialidade_hidden');
      if (!hidden){
        hidden = document.createElement('input');
        hidden.type = 'hidden';
        hidden.name = 'especialidade';
        hidden.id = 'especialidade_hidden';
        form.appendChild(hidden);
      }
      hidden.value = `outro - ${other}`;
    }
  } else {
    const hidden = form.querySelector('#especialidade_hidden');
    if (hidden) hidden.remove();
  }
  // Required fields validation (custom, shows all issues)
  const nome = (form.querySelector('#nome')?.value || '').trim();
  if (!nome){ setFieldError(form, 'nome', 'Campo obrigatório'); hasErrors = true; }
  const sobrenome = (form.querySelector('#sobrenome')?.value || '').trim();
  if (!sobrenome){ setFieldError(form, 'sobrenome', 'Campo obrigatório'); hasErrors = true; }
  const telVal = (form.querySelector('#telefone')?.value || '').replace(/\D+/g, '');
  if (!telVal){ setFieldError(form, 'telefone', 'Campo obrigatório'); hasErrors = true; }
  const email = (form.querySelector('#email')?.value || '').trim();
  if (!email){
    setFieldError(form, 'email', 'Campo obrigatório'); hasErrors = true;
  } else {
    const emailOk = /.+@.+\..+/.test(email);
    if (!emailOk){ setFieldError(form, 'email', 'E-mail inválido'); hasErrors = true; }
  }
  const pwd = (form.querySelector('#password')?.value || '').toString();
  if (!pwd){ setFieldError(form, 'password', 'Campo obrigatório'); hasErrors = true; }
  if (hasErrors){
    scrollToFirstError(form);
    return false;
  }
  // Prepend selected DDI to telefone in the submitted payload (do not alter visible field)
  const telInput = form.querySelector('#telefone');
  const ddiSelect = form.querySelector('#telefone_pais');
  const data = new FormData(form);
  if (telInput && ddiSelect) {
    const ddi = String(ddiSelect.value || '').replace(/\D+/g, '');
    const local = String(telInput.value || '').replace(/\D+/g, '');
    if (ddi && local) {
      data.set('telefone', `+${ddi}${local}`);
    }
  }
  const endpoint = '/api/biblioteca/register';
  const res = await fetch(endpoint, { method: 'POST', body: data, credentials: 'include' });
  try{
    const json = await res.json();
    if(json && json.success){
      const email = (form.querySelector('#email')?.value || '').trim();
      const to = new URL('/biblioteca/verificar-email', location.origin);
      if (email) to.search = `email=${encodeURIComponent(email)}`;
      location.href = to.toString();
      return false;
    }
    // Render API validation errors
    if (json && json.errors && typeof json.errors === 'object'){
      let usedGeneral = false;
      for (const [key, msg] of Object.entries(json.errors)){
        const message = String(msg || 'Inválido');
        const hasField = Boolean(form.querySelector(`[name="${key}"]`)) || Boolean(form.querySelector(`#${key}`)) || Boolean(form.querySelector(`[data-error-for="${key}"]`));
        if (hasField){
          setFieldError(form, key, message);
        } else {
          setGeneralError(form, message);
          usedGeneral = true;
        }
      }
      if (!usedGeneral && json.error){
        setGeneralError(form, String(json.error));
      }
      return false;
    }
    if (json && json.error){
      setGeneralError(form, String(json.error));
      return false;
    }
  }catch(_){}
  setGeneralError(form, 'Falha no cadastro.');
  return false;
}
// Attach handlers and disable native validation via JS
function setupForm(){
  const form = document.getElementById('regForm');
  if (!form) return;
  form.noValidate = true;
  form.addEventListener('submit', onRegister);
}
