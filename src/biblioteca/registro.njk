<script>
function setupEspecialidadeOutro(){
  const select = document.getElementById('especialidade');
  const other = document.getElementById('especialidade_outro');
  if (!select || !other) return;
  const toggle = () => {
    const isOther = select.value === 'Outro';
    other.style.display = isOther ? 'block' : 'none';
    other.required = isOther;
    if (!isOther) other.value = '';
  };
  select.addEventListener('change', toggle);
  toggle();
}
function clearErrors(form){
  form.querySelectorAll('.field-error').forEach(el => el.textContent = '');
  const general = form.querySelector('#general-error');
  if (general) general.textContent = '';
  // remove visual error classes
  form.querySelectorAll('.is-error').forEach((el) => el.classList.remove('is-error'));
  form.querySelectorAll('label.label-error').forEach((el) => el.classList.remove('label-error'));
}
function setFieldError(form, key, message){
  const container = form.querySelector(`.field-error[data-error-for="${key}"]`);
  if (container) container.textContent = message;
  // add visual error classes to input and its form-group
  const field = form.querySelector(`[name="${key}"]`) || form.querySelector(`#${key}`);
  if (field) field.classList.add('is-error');
  // highlight only the label linked to this field
  if (field && field.id){
    const label = form.querySelector(`label[for="${field.id}"]`);
    if (label) label.classList.add('label-error');
  }
}
function setGeneralError(form, message){
  const general = form.querySelector('#general-error');
  if (general) general.textContent = message;
}
function scrollToFirstError(form){
  const firstErr = Array.from(form.querySelectorAll('.field-error')).find(el => (el.textContent || '').trim().length > 0);
  if (firstErr){
    const key = firstErr.getAttribute('data-error-for') || '';
    const field = form.querySelector(`[name="${key}"]`) || form.querySelector(`#${key}`);
    if (field && typeof field.focus === 'function') {
      field.focus();
    }
    // Use scrollIntoView for smooth UX
    firstErr.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }
}
function onlyDigits(value){
  return String(value || '').replace(/\D+/g, '');
}
function formatBrazilPhone(d){
  const digits = onlyDigits(d).slice(0, 11);
  if (digits.length === 0) return '';
  if (digits.length <= 2) return `(${digits}`;
  if (digits.length <= 6) return `(${digits.slice(0,2)}) ${digits.slice(2)}`;
  if (digits.length <= 10){
    const mid = digits.slice(2, digits.length - 4);
    const end = digits.slice(-4);
    return `(${digits.slice(0,2)}) ${mid}-${end}`;
  }
  // 11 digits
  return `(${digits.slice(0,2)}) ${digits.slice(2,7)}-${digits.slice(7,11)}`;
}
function formatIntlGeneric(d){
  const digits = onlyDigits(d).slice(0, 20);
  if (digits.length <= 4) return digits;
  return `${digits.slice(0, digits.length - 4)}-${digits.slice(-4)}`;
}
function setupTelefoneFormatter(){
  const tel = document.getElementById('telefone');
  const country = document.getElementById('telefone_pais');
  if (!tel || !country) return;
  const applyFormat = () => {
    const cc = country.value.startsWith('+55') ? '+55' : 'other';
    const raw = tel.value;
    tel.value = cc === '+55' ? formatBrazilPhone(raw) : formatIntlGeneric(raw);
  };
  const updatePlaceholder = () => {
    const cc = country.value.startsWith('+55') ? '+55' : 'other';
    tel.placeholder = cc === '+55' ? '(00) 00000-0000' : 'Ex.: 123456-7890';
  };
  ['input','blur','paste'].forEach(ev => tel.addEventListener(ev, applyFormat));
  country.addEventListener('change', () => { updatePlaceholder(); applyFormat(); });
  updatePlaceholder();
  applyFormat();
}
async function onRegister(e){
  e.preventDefault();
  const form = e.target;
  clearErrors(form);
  let hasErrors = false;
