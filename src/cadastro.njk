layout: layout.njk
title: Cadastro | Dérig
description: Faça seu cadastro para que possamos entrar em contato.
---

<div id="ondeComprar" class="cadastro">
	<div id="headerInterno">
		<div class="container">
			<p><a href="/">Home</a> > <a href="/onde-comprar">Onde comprar</a> > Cadastro</p>
			<h1>Cadastro</h1>
		</div>
	</div>

	<div id="content">
		<div class="container">
			<form id="cadastroForm" class="form-horizontal">
				<h2>Informações pessoais</h2>
				<div class="form-group">
					<label for="nome">Nome</label>
					<div class="col-sm-12">
						<input type="text" class="form-control" id="nome" name="nome" placeholder="Ex: Nome e Sobrenome">
					</div>
				</div>

				<div class="form-group">
					<label for="email">E-mail</label>
					<div class="col-sm-12">
						<input type="email" class="form-control" id="email" name="email" placeholder="Ex.: mail@mail.com.br">
					</div>
				</div>

				<div class="form-group">
					<label for="cpf">CPF</label>
					<div class="col-sm-6">
						<input type="text" class="form-control cpf-mask" id="cpf" name="cpf" placeholder="Ex.: 000.000.000-00">
					</div>
				</div>

				<div class="form-group">
					<label for="rg">RG</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" id="rg" name="rg">
					</div>
				</div>

				<div class="form-group">
					<label for="dataNascimento">Data de nascimento</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" id="dataNascimento" name="dataNascimento" placeholder="Ex.: dd/mm/aaaa" data-mask="00/00/0000" maxlength="10" autocomplete="off">
					</div>
				</div>

				<div class="form-group">
					<label for="foneFixo">Telefone fixo</label>

					<div class="col-sm-4 col-xs-8">
						<input type="text" class="form-control phone-ddd-mask" id="foneFixo" name="foneFixo" placeholder="Ex.: (00) 0000-0000">
					</div>
				</div>

				<div class="form-group">
					<label for="celular">Celular</label>

					<div class="col-sm-4 col-xs-8">
						<input type="text" class="form-control cel-sp-mask" id="celular" name="celular" placeholder="Ex.: (00) 00000-0000">
					</div>
				</div>

				<h2>Informações profissionais</h2>
				<div class="form-group">
					<div class="col-sm-4">
						<label for="cro">CRO</label>
						<input type="text" class="form-control" id="cro" name="cro">
					</div>
					<div class="col-sm-2 col-xs-4">
						<label for="croUf">UF</label>
						<input type="text" class="form-control" id="croUf" name="croUf" pattern="[A-z][A-z]">
					</div>
				</div>

				<div class="form-group">
					<label for="especialidade">Especialidade</label>
					<div class="col-sm-10">
						<select name="especialidade">
							<option value="">Selecione uma especialidade</option>
							<option value="Clínico Geral">Clínica Geral</option>
							<option value="Implantodontia">Implantodontia</option>
							<option value="Periodontia">Periodontia</option>
							<option value="Prótese">Prótese</option>
							<option value="Outros">Outros</option>
						</select>
					</div>
				</div>

				<h2>Endereço</h2>
				<div class="form-group">
					<label for="cep">CEP</label>
					<div class="col-sm-8 col-xs-8">
						<input type="text" class="form-control cep-mask" id="cep" name="cep" placeholder="Ex.: 00000-000">
					</div>
					<div class="col-sm-4 col-xs-4">
						<a href="http://www.buscacep.correios.com.br/sistemas/buscacep" target="_blank">Não sei meu CEP</a>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-8 col-xs-8">
						<label for="rua">Logradouro</label>
						<input type="text" class="form-control" id="rua" name="rua">
					</div>
					<div class="col-sm-4 col-xs-4">
						<label for="numero">Número</label>
						<input type="text" class="form-control" id="numero" name="numero">
					</div>
				</div>
				<div class="form-group">
					<label for="complemento">Complemento<span>Opcional</span></label>
					<div class="col-sm-12">
						<input type="text" class="form-control" id="complemento" name="complemento">
					</div>
				</div>
				<div class="form-group">
					<label for="bairro">Bairro</label>
					<div class="col-sm-12">
						<input type="text" class="form-control" id="bairro" name="bairro">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-8 col-xs-8">
						<label for="cidade">Cidade</label>
						<input type="text" class="form-control" id="cidade" name="cidade">
					</div>
					<div class="col-sm-4 col-xs-4">
						<label for="uf">UF</label>
						<input type="text" class="form-control" id="uf" name="uf" placeholder="Ex.: SP">
					</div>
				</div>
				<br />
				<div class="form-group" id="enviar">
					<input type="submit" value="Enviar">
				</div>
				<p id="successMsg" style="display: none;"><img src="/images/layout/ico-sucesso.png" alt="Check">Mensagem enviada com sucesso!</p>
			</form>
		</div>
	</div>
</div>

<script>
  (function() {
    const form = document.getElementById('cadastroForm');
    if (!form) return;
    const success = document.getElementById('successMsg');

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      success && (success.style.display = 'none');
      const submitBtn = form.querySelector('input[type="submit"]');
      if (submitBtn) submitBtn.disabled = true;
      try {
        const res = await fetch('/api/form/cadastro', {
          method: 'POST',
          body: new FormData(form)
        });
        const data = await res.json().catch(() => ({}));
        if (!res.ok || !data.success) {
          alert('Falha ao enviar. Tente novamente mais tarde.');
          return;
        }
        if (success) success.style.display = 'block';
        form.reset();
      } catch (_) {
        alert('Erro de rede. Verifique sua conexão.');
      } finally {
        if (submitBtn) submitBtn.disabled = false;
      }
    });
  })();
</script>